{
  "name": "todo-api",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "type": "commonjs",
  "scripts": {
    "start": "NODE_ENV=production node -r ts-node/register/transpile-only -r tsconfig-paths/register build/index.js",
    "start:watch": "NODE_ENV=development nodemon --inspect src/index.ts",
    "build": "pnpm build:clean && pnpm build:raw",
    "build:raw": "tsc -p tsconfig-build.json",
    "build:clean": "rm -rf build",
    "test": "NODE_ENV=test jest --maxWorkers=1 --silent",
    "test:onlyLocal": "pnpm run test --testPathIgnorePatterns=.e2e.",
    "test:watch": "pnpm run test --watch",
    "test:coverage": "pnpm run test --coverage",
    "test:coverage:clean": "rm -rf coverage",
    "release": "standard-version",
    "prepare": "husky install",
    "clean:modules": "rm -rf node_modules",
    "lint:eslint": "eslint **/*.{ts,js,tsx,jsx}",
    "lint:prettier": "prettier **/*.{json,jsonc,scss,yml}",
    "lint:fix": "pnpm run lint:prettier --write && pnpm run lint:eslint --fix"
  },
  "author": "Product Owner",
  "contributors": [
    {
      "name": "Daniel Sales",
      "email": "danisales.es@gmail.com"
    }
  ],
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "helmet": "7.0.0",
    "mongoose": "7.4.1",
    "node-cron": "3.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.7",
    "@commitlint/config-conventional": "17.6.7",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.3",
    "@types/jsdom": "21.1.1",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "6.2.0",
    "@typescript-eslint/parser": "6.2.0",
    "eslint": "8.46.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.9.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-import-resolver-typescript": "3.5.5",
    "eslint-plugin-import": "2.28.0",
    "eslint-plugin-jest": "27.2.3",
    "eslint-plugin-prettier": "5.0.0",
    "husky": "8.0.3",
    "jest": "29.6.2",
    "nodemon": "3.0.1",
    "prettier": "3.0.0",
    "standard-version": "9.5.0",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "tslib": "2.6.1",
    "typescript": "5.1.6"
  }
}
