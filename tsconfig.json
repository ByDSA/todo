{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "declaration": true,
    "outDir": "./build",
    "sourceMap": true,
    "inlineSources": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2017",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"],
      "@tests/*": ["tests/*"],
      "@utils/*": ["src/utils/*"],
      "@modules/*": ["src/modules/*"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"]
}
